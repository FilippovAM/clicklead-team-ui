.table__static
  .ant-table-thead tr th > div
    position: static;
  .ant-spin-container.ant-spin-blur
    display: block;
  .ant-spin-container:before
    display: none;
  .ant-spin-nested-loading
    margin: 0
    padding: 0
  .ant-spin-nested-loading > div > .ant-spin
    position: absolute;
    height: 48px;
    top: 56px;
    padding: 0;
    margin: 0;
    border-radius: 0;
    box-shadow: none;
    bottom: 0;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
  .ant-spin-nested-loading > div > .ant-spin > i
    position: static;
    margin: 0
  .ant-table-placeholder
    position: static;
    margin: 0
    padding: 0
    height: 48px
    border-top: 1px solid #f0f1f3;
    display: flex;
    align-items: center;
    justify-content: center;
  .ant-table-tbody tr:first-child td
    padding-top: 16px
    border-top: 1px solid #f0f1f3;


