.mselect
  position: relative;
  font-size: 13px;

.mselect__value
  border: 1px solid #e6eaed;
  border-radius: 4px
  padding: 0 26px 0 16px
  cursor: pointer;
  font-size: 13px;
  line-height: 38px;
  position: relative;
  color: $color
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  transition()
  svg
    position: absolute;
    top: 18px;
    right: 16px;
    transition: all .2s

.mselect__value-placeholder
  color: $color-light

.mselect__dropdown
  border: 1px solid #e6eaed;
  width: 100%
  position: absolute;
  top: 39px
  left: 0
  z-index: 10
  background-color: #fff
  border-bottom-right-radius: 4px;
  border-bottom-left-radius: 4px;
  shadow()

.mselect-isOpen
  .mselect__value
    border-bottom-right-radius: 0px;
    border-bottom-left-radius: 0px;
    background-color: #fff
    shadow()
    z-index: 10
    svg
      transform: rotate(180deg)

.mselect__dropdown-search
  width: 100%;
  padding: 0 16px;
  margin: 0;
  height: 40px
  line-height: 40px
  border: 0
  border-bottom: 1px solid #e6eaed;

.mselect__dropdown-values
  padding: 7px 0
  margin: 0
  list-style: none;
  overflow-y: scroll;
  max-height: 170px;
  li
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    height: 32px;
    line-height: 30px;
    padding: 0 16px
    label
      cursor: pointer;
      font-size: 13px
      input
        margin-right: 8px
      span
        color: $color-light
        margin-right: 2px
        font-size: 12px

.mselect__dropdown-values-empty
.mselect__dropdown-values-loading
  color: $color-light

.mselect-hideIds
  .mselect__dropdown-values li span
    display: none;

.form__item-created_at
  width: auto !important

.filter__filters-expanded > div > div
  min-width: 12.5% !important;


.mselect-disabled
  .mselect__value
    opacity: .6
    pointer-events: none
